<div class="row">
  <div class="large-12">
    <h1>Questions</h1>

    <% if !@questions.empty? %>
      <table>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th></th>
        </tr>

        <% @questions.each do |question| %>
          <tr>
            <td><%= question.name %></td>
            <td><%= truncate(question.description, length: 30) %></td>
            <td><%= link_to 'View Question', question_path(question) %></td>
            <td><%= link_to 'Edit Question', edit_question_path(question) %></td>
            <td><%= link_to 'Delete Question', question_path(question), method: :delete %></td>
          </tr>
        <% end %>
      </table>

    <% end %>

    <%= link_to 'Add a new question here', new_question_path %>

  </div>
</div>
