<div class="row">
  <div class="large-12">
    <h2>Question</h2>

      <table>
        <td><%= @question.name %></td>
        <td><%= truncate(@question.description, length: 30) %></td>
      </table>

      <br>

      <h2>Answer(s)</h2>

      <ol>
        <% if !@answers.empty? %>
          <% @answers.each do |answer| %>
            <li><%= answer.description %></li>
          <% end %>
        <% end %>
      </ol>

      <h3>Write your answer below:</h3>
      <%= form_for [@question, @answer] do |f| %>
        <%= f.label :description %>
        <%= f.text_area :description %>

        <%= f.submit "Add your answer!" %>
      <% end %>

      <br>
      <%= link_to 'Click here to go back.', questions_path %>

  </div>
</div>
